{{query-parameters
  isFetchingData=isFetchingData
  studySearchParams=studySearchParams
  onChange=(action "parameterChanged")
  onFind=(action "find")
}}
<div class="query-content">
  {{data-filters
    isFetchingData=isFetchingData
    dataObjectPublisherMapping=dataObjectPublisherMapping
    onFilterStudies=(action (mut latestStudyFilters))
    onFilterDataObjects=(action "filterDataObjects")
  }}
  {{#query-results
    isFetchingData=isFetchingData
    studies=filteredStudies
    removeStudies=(action "removeStudies")
    saveResults=(action "saveResults")
    loadSavedResultsList=(action "loadSavedResultsList")
    loadSavedResults=(action "loadSavedResults")
    removeSavedResults=(action "removeSavedResults")
    exportResultsToPdf=(action "exportResultsToPdf")
  }}
    {{promise-proxy-container proxy=fetchDataPromiseObject isLoading=false}}
  {{/query-results}}
</div>
{{yield}}
