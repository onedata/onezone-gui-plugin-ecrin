<div class="data-object-type">
  <div class="object-type-name">{{typeText}}</div>
  {{#if isExpandable}}
    <a {{action toggleExpansion}} class="show-more-link">
      {{tt this (if isExpanded "showLess" "showMore")}}
    </a>
  {{/if}}
</div>
<div class="data-object-description">
  <div class="data-object-overflow-container {{if (and isExpandable (not isExpanded)) "collapsed" "expanded"}}">
    {{yield}}
  </div>
  {{#if (and isExpandable (not isExpanded))}}
    <div class="content-hidden-shadow"></div>
  {{/if}}
</div>
{{#if showYear}}
  <div class="data-object-year">{{or year "‚Äê"}}</div>
{{/if}}
{{#if showAccessIndicator}}
  <div class="data-object-status">
    <span class="data-object-status-icon {{accessTypeIndicator}}">
      {{#if accessTypeName}}
        {{bs-tooltip title=accessTypeName}}
      {{/if}}
    </span>
  </div>
{{/if}}
{{#if showCheckbox}}
  <div class="data-object-checkbox">
    {{one-checkbox
      checked=isChecked
      update=toggleSelection
    }}
  </div>
{{/if}}
