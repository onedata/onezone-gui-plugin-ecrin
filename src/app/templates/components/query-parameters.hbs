</div>
<div class="row">
  <div class="col-xs-12 col-sm-3 form-group">
    <label class="control-label">{{tt this "filterByType"}}</label>
    {{#power-select-multiple
      options=typeFilterOptions
      selected=typeFilter
      onchange=(action (mut typeFilter))
      as |typeFilter|}}
      {{typeFilter}}
    {{/power-select-multiple}}
  </div>
  <div class="col-xs-12 col-sm-3 form-group">
    <label class="control-label">{{tt this "filterByAccessType"}}</label>
    <input
      class="form-control"
      type="text"
      value={{accessTypeFilter}}
      oninput={{action (mut accessTypeFilter) value="target.value"}}>
  </div>
  <div class="col-xs-12 col-sm-3 form-group">
    <label class="control-label">{{tt this "filterByYear"}}</label>
    <input
      class="form-control"
      type="text"
      value={{yearFilter}}
