<div class="row">
  <div class="col-xs-12 col-sm-6 form-group">
    <label class="control-label">{{tt this "search"}}</label>
    <input
      class="form-control"
      type="text"
      value={{search}}
      oninput={{action (mut search) value="target.value"}}>
  </div>
  <div class="col-xs-12 col-sm-6 form-group">
    <label class="control-label">{{tt this "selectMode"}}</label>
    {{#power-select
      selected=mode
      options=modeOptions
      onchange=(action (mut mode))
      searchEnabled=false
      as |mode|}}
      {{mode}}
    {{/power-select}}
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-6 form-group">
    <label class="control-label">{{tt this "studyTitleContains"}}</label>
    <input
      class="form-control"
      type="text"
      value={{studyTitleContains}}
      oninput={{action (mut studyTitleContains) value="target.value"}}>
