// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/tmp/**": true,
    "**/dist/**": true,
    "**/rel/**": true,
    "**/node_modules/**": true,
    "**/bower_components/**": true
  },
  "editor.tabSize": 2,
  "editor.rulers": [
    80
  ],
  "rewrap.wrappingColumn": 80,
  "[javascript]": {
      "editor.formatOnSave": true,
      "editor.formatOnType": true,
      "editor.formatOnPaste": true
  }
}